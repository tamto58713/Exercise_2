                    li.nav-item.mr-5.ml-5
                        a.nav-link(href='/about') About
                if (!currentUser.name)
                    a(href="/auth/login")   
                        button.btn.btn-primary Login
                else
                    .user   
                    span.text-warning.ml-5.mr-2(style="font-weight: bold")= currentUser.name
                    a(href="/auth/logout") 
                        button.btn.btn-primary.btn-sm(style="font-weight: bold") Logout

        block common
